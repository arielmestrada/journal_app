<div class="container main-c">
    <div class="row border mb-3">
        <div class="col">
            <h1>Category Details</h1>
            <%= link_to "Home Page", root_path, class:"btn btn-link no-pad-sides" %> >
            <%= link_to "Categories", categories_path, class:"btn btn-link no-pad-sides" %>
            <a class="btn no-pad-sides rm-style"> > <%= @category.name %></a>            
        </div>              
    </div>
    <div class="row">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Category Name</th>
                    <th scope="col">Category Id</th>
                    <th scope="col">Creation Date</th>
                    <th scope="col">Last Update</th>
                    <th scope="col" colspan="3">Options</th>
                </tr>
            </thead> 
            <tbody>                
                <tr>
                    <td><%= @category.name %></td>
                    <td><%= @category.id %></td>
                    <td><%= @category.created_at %></td>
                    <td><%= @category.updated_at %></td>
                    <td><%= link_to "Tasks", category_tasks_path(@category.id), class:"btn btn-primary" %></td>
                    <td><%= link_to "Edit", edit_category_path(@category.id), class:"btn btn-warning" %></td>
                    <td><%= button_to "Delete", {:action => 'destroy', :id => @category.id }, :method => :delete, class:"btn btn-danger" %></td>   
                </tr>
            </tbody>
        </table>
    </div>  
    <%= link_to "Back", :back, class:"btn btn-primary" %>
</div>

