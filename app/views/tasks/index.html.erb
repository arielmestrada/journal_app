<div class="container main-c">
    <div class="row border mb-3">
        <div class="col">
            <h1>Tasks for <%= @category.name %></h1>
            <%= link_to "Home Page", root_path, class:"btn btn-link no-pad-sides" %> >
            <%= link_to "Categories", categories_path, class:"btn btn-link no-pad-sides" %> >
            <%= link_to "#{@category.name}", category_path(@category.id), class:"btn btn-link no-pad-sides" %>     
            <a class="btn no-pad-sides rm-style"> > Tasks</a>   
        </div>
    </div>

    <div class="row">
        <%= link_to "Create New Task", new_category_task_path, class:"btn btn-secondary mb-3" %>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">Task Name</th>                        
                    <th colspan="3" scope="col" style="text-align: center">Options</th>
                </tr>
            </thead>
            <tbody>                
                <% @tasks.each do |task| %>    
                    <tr>
                        <td><%= task.name %></td>
                        <td><%= link_to "View", category_task_path(@category.id, task.id), class:"btn btn-success" %></td>
                        <td><%= link_to "Edit", edit_category_task_path(@category.id, task.id), class:"btn btn-warning" %></td>
                        <td><%= button_to "Delete", {:action => 'destroy', :id => task.id }, :method => :delete, class:"btn btn-danger" %></td>               
                    </tr>  
                <% end %>
            </tbody>
        </table>
    </div>    
</div>